---
/**
 * LeaderboardTable Component
 * 
 * Displays the main leaderboard table with all apps ranked by MRR or Revenue.
 * Features:
 * - Sortable columns (MRR, Revenue)
 * - App logos and icons
 * - Founder information with Twitter links
 * - Rank medals for top 3 positions
 * - External links to app websites or App Store
 * 
 * Props:
 * - startups: Array of startup objects with metrics
 * 
 * Used in: index.astro
 */
import { BadgeCheck } from '@lucide/astro';
import type { StartupWithMetrics } from '../lib/db';

interface Props {
	startups: StartupWithMetrics[];
}

const { startups } = Astro.props;
---

<div class="card">
	<div class="table-container">
		<table>
			<thead>
				<tr>
					<th class="rank-col">Rank</th>
					<th class="app-col">App</th>
					<th class="founder-col">Founder</th>
					<th class="sortable amount-header" data-sort="mrr">
						<button class="sort-header" data-field="mrr">
							MRR
							<svg class="sort-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M7 13l5 5 5-5M7 6l5-5 5 5"></path>
							</svg>
						</button>
					</th>
					<th class="sortable amount-header" data-sort="revenue">
						<button class="sort-header" data-field="revenue">
							Revenue (28d)
							<svg class="sort-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M7 13l5 5 5-5M7 6l5-5 5 5"></path>
							</svg>
						</button>
					</th>
					<th class="action-col">Action</th>
				</tr>
			</thead>
			<tbody>
				{startups.map((startup, index) => {
					// Calculate logo URL
					let logoUrl = '/placeholder.svg';
					if (startup.app_store_id) {
						logoUrl = `/api/appstore/icon?id=${startup.app_store_id}`;
					} else if (startup.website_url) {
						const domain = startup.website_url.replace(/^https?:\/\//, '').replace(/\/$/, '');
						logoUrl = `https://www.google.com/s2/favicons?domain=${domain}&sz=64`;
					}
					
					return (
                                        <tr>
                                                <td class="rank-cell" data-label="Rank">
                                                        {index === 0 && <span class="medal">ðŸ¥‡</span>}
                                                        {index === 1 && <span class="medal">ðŸ¥ˆ</span>}
                                                        {index === 2 && <span class="medal">ðŸ¥‰</span>}
                                                        {index > 2 && <span class="rank-number">{index + 1}</span>}
                                                </td>
                                                <td class="app-cell" data-label="App">
                                                        <img
                                                                src={logoUrl}
                                                                alt={startup.name}
                                                                class="app-logo"
                                                                loading="lazy"
                                                        />
                                                        <div class="app-info">
                                                                <span class="app-name">{startup.name}</span>
                                                                <BadgeCheck class="badge-icon" stroke-width="2.5" />
                                                        </div>
                                                </td>
                                                <td class="founder-cell" data-label="Founder">
                                                        {startup.founder_username ? (
                                                                <a href={`https://twitter.com/${startup.founder_username.replace('@', '')}`} target="_blank" rel="noopener noreferrer" class="founder-link">
                                                                        <img
                                                                                src={`https://unavatar.io/x/${startup.founder_username.replace('@', '')}`}
                                                                                alt={startup.founder_username}
										class="founder-avatar"
										loading="lazy"
										data-username={startup.founder_username.replace('@', '')}
									/>
									<span>@{startup.founder_username.replace('@', '')}</span>
								</a>
                                                        ) : (
                                                                <span class="empty-field">â€”</span>
                                                        )}
                                                </td>
                                                <td class="amount" data-label="MRR">${startup.mrr.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}</td>
                                                <td class="amount" data-label="Revenue (28d)">${startup.total_revenue.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 })}</td>
                                                <td class="action-cell" data-label="Action">
                                                        {(startup.website_url || startup.app_store_id) && (
                                                                <a
                                                                        href={startup.website_url || `https://apps.apple.com/us/app/id${startup.app_store_id}`}
                                                                        target="_blank"
                                                                        rel="noopener noreferrer"
                                                                        class="action-btn"
                                                                        aria-label={`Open ${startup.name}`}
                                                                >
                                                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                                                                <polyline points="15 3 21 3 21 9"></polyline>
                                                                                <line x1="10" y1="14" x2="21" y2="3"></line>
									</svg>
								</a>
							)}
						</td>
					</tr>
					);
				})}
			</tbody>
		</table>
	</div>
</div>

<style>
        .card {
                background: color-mix(in oklch, var(--card-bg) 94%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                border-radius: 22px;
                overflow: hidden;
                transition: background-color 0.3s ease, border-color 0.3s ease;
                box-shadow: 0 30px 70px -45px color-mix(in oklch, var(--fg) 28%, transparent);
                backdrop-filter: blur(18px);
        }

        .table-container {
                overflow-x: auto;
                padding: clamp(0.25rem, 1vw, 0.75rem);
        }

        .table-container::-webkit-scrollbar {
                height: 8px;
        }

        .table-container::-webkit-scrollbar-thumb {
                background: color-mix(in oklch, var(--border) 70%, transparent);
                border-radius: 999px;
        }

        table {
                width: 100%;
                border-collapse: collapse;
                background: transparent;
                min-width: 640px;
        }

        thead {
                background: color-mix(in oklch, var(--thead-bg) 90%, transparent);
                border-bottom: 1px solid color-mix(in oklch, var(--border) 80%, transparent);
                transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        th {
                padding: 1.15rem 1.75rem;
                text-align: left;
                font-weight: 600;
                font-size: 0.8rem;
                color: color-mix(in oklch, var(--muted) 80%, var(--fg) 20%);
                text-transform: uppercase;
                letter-spacing: 0.08em;
                white-space: nowrap;
                transition: color 0.3s ease;
                background: transparent;
        }

        th.sortable,
        th.amount-header {
                text-align: right;
        }

        th.founder-col {
                text-align: left;
        }

        .sort-header {
                background: none;
                border: none;
                padding: 0;
                font: inherit;
                color: inherit;
                cursor: pointer;
                display: inline-flex;
                align-items: center;
                gap: 0.45rem;
                transition: color 0.3s ease;
        }

        .sort-header:hover {
                color: var(--fg);
        }

        .sort-header:hover .sort-icon {
                transform: translateY(-1px);
        }

        .sort-icon {
                width: 16px;
                height: 16px;
                opacity: 0.45;
                transition: transform 0.3s ease, opacity 0.3s ease;
        }

        tbody tr {
                background: color-mix(in oklch, var(--card-bg) 96%, transparent);
                border-bottom: 1px solid color-mix(in oklch, var(--border) 75%, transparent);
                transition: background-color 0.2s ease, border-color 0.3s ease, transform 0.2s ease;
        }

        tbody tr:hover {
                background: color-mix(in oklch, var(--row-hover) 60%, var(--card-bg) 40%);
                transform: translateY(-2px);
        }

        tbody tr:last-child {
                border-bottom: none;
        }

        td {
                padding: 1.15rem 1.75rem;
                font-size: 0.97rem;
                vertical-align: middle;
                position: relative;
                background: transparent;
                color: var(--fg);
        }

        .rank-col {
                width: 80px;
                text-align: center;
        }

        .rank-cell {
                text-align: center;
        }

        .medal {
                font-size: 1.5rem;
                display: inline-block;
        }

        .rank-number {
                color: var(--muted-light);
                font-weight: 600;
                font-size: 0.9rem;
                transition: color 0.3s ease;
        }

        .founder-col {
                min-width: 180px;
        }

        .founder-cell {
                white-space: nowrap;
        }

        .founder-link {
                display: flex;
                align-items: center;
                gap: 0.55rem;
                text-decoration: none;
                color: var(--fg);
                transition: opacity 0.15s, color 0.3s ease;
                white-space: nowrap;
                flex-wrap: nowrap;
        }

        .founder-link:hover {
                opacity: 0.7;
        }

        .founder-avatar {
                width: 34px;
                height: 34px;
                border-radius: 50%;
                object-fit: cover;
                background: color-mix(in oklch, var(--border) 80%, transparent);
                flex-shrink: 0;
                display: block;
                transition: transform 0.3s ease;
        }

        tbody tr:hover .founder-avatar {
                transform: translateY(-1px);
        }

        .app-col {
                min-width: 250px;
        }

        .app-cell {
                display: flex;
                align-items: center;
                gap: 0.9rem;
                flex-wrap: nowrap;
        }

        .app-logo {
                width: 44px;
                height: 44px;
                border-radius: 12px;
                object-fit: cover;
                background: color-mix(in oklch, var(--border) 80%, transparent);
                flex-shrink: 0;
                transition: background-color 0.3s ease, transform 0.3s ease;
                box-shadow: 0 10px 24px -18px color-mix(in oklch, var(--fg) 35%, transparent);
        }

        tbody tr:hover .app-logo {
                transform: translateY(-2px) scale(1.02);
        }

        .app-info {
                display: flex;
                align-items: center;
                gap: 0.45rem;
                flex-wrap: nowrap;
                white-space: nowrap;
                flex-direction: row;
        }

        .app-name {
                font-weight: 550;
                color: var(--fg);
                white-space: nowrap;
                transition: color 0.3s ease;
        }

        .badge-icon {
                width: 18px;
                height: 18px;
                color: color-mix(in oklch, var(--primary) 85%, var(--fg) 15%);
                flex-shrink: 0;
                transition: color 0.3s ease;
        }

        .amount {
                text-align: right;
                font-weight: 650;
                font-variant-numeric: tabular-nums;
                color: var(--fg);
        }

        .empty-field {
                color: var(--empty);
                transition: color 0.3s ease;
        }

        .action-col {
                width: 90px;
                text-align: center;
        }

        .action-cell {
                text-align: center;
        }

        .action-btn {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                width: 34px;
                height: 34px;
                border: none;
                background: color-mix(in oklch, var(--card-bg) 70%, transparent);
                color: color-mix(in oklch, var(--muted) 70%, var(--fg) 30%);
                cursor: pointer;
                border-radius: 12px;
                transition: all 0.15s, color 0.3s ease;
                box-shadow: inset 0 1px 0 color-mix(in oklch, var(--fg) 12%, transparent);
        }

        .action-btn:hover {
                background: color-mix(in oklch, var(--row-hover) 65%, var(--card-bg) 35%);
                color: var(--fg);
        }

        .action-btn svg {
                width: 16px;
                height: 16px;
        }

        @media (prefers-reduced-motion: reduce) {
                .sort-icon,
                .app-logo,
                .founder-avatar,
                tbody tr,
                .action-btn {
                        transition: none;
                }
        }

        @media (max-width: 900px) {
                table {
                        min-width: 100%;
                }

                th,
                td {
                        padding-left: 1.25rem;
                        padding-right: 1.25rem;
                }
        }

        @media (max-width: 768px) {
                .table-container {
                        overflow: visible;
                        padding: 0;
                }

                table,
                tbody,
                tr,
                td {
                        display: block;
                        width: 100%;
                }

                table {
                        min-width: 100%;
                }

                thead {
                        display: none;
                }

                tbody {
                        display: grid;
                        gap: 1rem;
                        padding: 0.25rem;
                }

                tbody tr {
                        border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                        border-radius: 18px;
                        padding: 1.1rem 1.25rem;
                        box-shadow: 0 20px 40px -35px color-mix(in oklch, var(--fg) 28%, transparent);
                }

                td {
                        padding: 0.4rem 0;
                        display: grid;
                        grid-template-columns: max-content 1fr;
                        align-items: center;
                        gap: 0.75rem;
                        font-size: 0.92rem;
                }

                td::before {
                        content: attr(data-label);
                        font-size: 0.72rem;
                        letter-spacing: 0.08em;
                        text-transform: uppercase;
                        font-weight: 600;
                        color: color-mix(in oklch, var(--muted) 80%, var(--fg) 20%);
                }

                .rank-cell {
                        display: flex;
                        align-items: center;
                        gap: 0.75rem;
                        justify-content: flex-start;
                }

                .rank-cell::before {
                        display: none;
                }

                .app-cell {
                        display: grid;
                        grid-template-columns: max-content 1fr;
                        align-items: center;
                        gap: 0.85rem;
                }

                .app-cell::before {
                        margin-top: 0.35rem;
                        align-self: flex-start;
                }

                .founder-cell {
                        gap: 0.6rem;
                }

                .founder-link {
                        flex-wrap: nowrap;
                }

                .amount {
                        justify-self: end;
                        text-align: right;
                }

                .action-cell {
                        justify-content: flex-end;
                        display: flex;
                }

                .action-cell::before {
                        display: none;
                }
        }
</style>

