---
/**
 * AddAppButton Component
 * 
 * A button that opens the Add App modal when clicked.
 * Displays in the actions bar at the top of the leaderboard.
 * 
 * Used in: index.astro
 */
---

<div class="actions-bar">
        <div class="actions-copy">
                <h2>Ready to join the leaderboard?</h2>
                <p>Share your metrics securely to inspire the next generation of indie builders.</p>
        </div>
        <button class="add-btn" id="open-modal">
                <svg class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                Add New App
        </button>
</div>

<style>
        .actions-bar {
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 1.5rem;
                padding: 1.5rem 1.75rem;
                border-radius: 20px;
                background: color-mix(in srgb, var(--card-bg) 94%, rgba(255, 255, 255, 0.35));
                border: 1px solid color-mix(in srgb, var(--card-border) 75%, transparent);
                box-shadow: var(--shadow-soft);
        }

        .actions-copy {
                max-width: 520px;
                display: flex;
                flex-direction: column;
                gap: 0.35rem;
        }

        .actions-copy h2 {
                margin: 0;
                font-size: clamp(1.2rem, 2.5vw, 1.45rem);
                color: var(--fg);
                letter-spacing: -0.01em;
        }

        .actions-copy p {
                margin: 0;
                color: var(--muted);
                font-size: 0.95rem;
                line-height: 1.6;
        }

        .add-btn {
                background-image: var(--accent-gradient);
                color: var(--btn-text);
                border: none;
                padding: 0.85rem 1.6rem;
                font-size: 0.95rem;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease, box-shadow 0.3s ease, filter 0.3s ease;
                font-family: inherit;
                display: inline-flex;
                align-items: center;
                gap: 0.6rem;
                border-radius: 999px;
                box-shadow: var(--accent-shadow);
                white-space: nowrap;
        }

        .add-btn:hover {
                transform: translateY(-2px);
                filter: brightness(1.05);
        }

        .add-btn .icon {
                width: 18px;
                height: 18px;
        }

        @media (max-width: 900px) {
                .actions-bar {
                        flex-direction: column;
                        align-items: flex-start;
                }

                .add-btn {
                        width: 100%;
                        justify-content: center;
                }
        }

        @media (max-width: 600px) {
                .actions-bar {
                        padding: 1.25rem 1.25rem 1.4rem;
                }

                .actions-copy h2 {
                        font-size: 1.15rem;
                }

                .actions-copy p {
                        font-size: 0.92rem;
                }
        }
</style>

