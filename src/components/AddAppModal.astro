---
/**
 * AddAppModal Component
 * 
 * Modal dialog for adding a new app to the leaderboard.
 * Includes a form with fields for:
 * - App name
 * - App Store ID (preferred for icon)
 * - Website URL (alternative for icon)
 * - Founder Twitter handle
 * - RevenueCat Project ID
 * - RevenueCat API Key (read-only)
 * 
 * Features:
 * - Form validation
 * - Loading states
 * - Success/error messages
 * - Accessible keyboard navigation (ESC to close)
 * 
 * Used in: index.astro
 */
---

<div id="modal" class="modal">
	<div class="modal-backdrop" id="modal-backdrop"></div>
        <div class="modal-content">
                <div class="modal-header">
                        <div class="header-copy">
                                <span class="modal-badge">Submit your metrics</span>
                                <h2>Add New App</h2>
                                <p class="modal-description">Share your key RevenueCat details to keep tabs on MRR and 28-day revenue alongside the community.</p>
                        </div>
                        <button class="close-btn" id="close-modal">Ã—</button>
                </div>
                <form id="startup-form" class="form">
			<div class="field">
				<label for="name">App Name *</label>
				<input type="text" id="name" name="name" required placeholder="CloudSync Pro" />
			</div>

			<div class="field">
				<label for="appStoreId">App Store ID *</label>
				<input type="text" id="appStoreId" name="appStoreId" placeholder="6746816013" />
				<p class="help-text">Preferred. Provide this if possible (faster and more reliable icon).</p>
			</div>

			<div class="field">
				<label for="websiteUrl">App Website *</label>
				<input type="url" id="websiteUrl" name="websiteUrl" placeholder="https://example.com" />
				<p class="help-text">Only if you don't have the App Store ID.</p>
			</div>

			<div class="field">
				<label for="founderUsername">Founder Twitter Handle</label>
				<input type="text" id="founderUsername" name="founderUsername" placeholder="@username" />
			</div>

			<div class="field">
				<label for="projectId">RevenueCat Project ID *</label>
				<input type="text" id="projectId" name="projectId" required placeholder="abcd1234" />
			</div>

			<div class="field">
				<label for="revenuecatApiKey">RevenueCat API Key *</label>
				<input type="password" id="revenuecatApiKey" name="revenuecatApiKey" required placeholder="sk_abc123..." />
				<div class="field-banner">
					<strong>Important:</strong> Create an API key (V2) with <em>READ ONLY</em> permissions limited to "Chart metrics". Do not enable write access or permissions to other data.
				</div>
			</div>

			<div id="form-message" class="message" style="display: none;"></div>

			<div class="form-actions">
				<button type="button" class="btn-secondary" id="cancel-modal">Cancel</button>
				<button type="submit" class="btn-primary" id="submit-btn">
					<span class="btn-text">Add App</span>
					<span class="btn-loader" style="display: none;">...</span>
				</button>
			</div>
		</form>
	</div>
</div>

<style>
        .modal {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 1000;
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0;
                visibility: hidden;
                transition: opacity 0.2s;
                padding: clamp(1rem, 4vw, 2.25rem);
        }

	.modal.active {
		opacity: 1;
		visibility: visible;
	}

        .modal-backdrop {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.55);
                backdrop-filter: blur(8px);
                transition: background 0.3s ease;
        }

	:global([data-theme="dark"]) .modal-backdrop {
		background: rgba(0, 0, 0, 0.9);
	}

        .modal-content {
                background: color-mix(in oklch, var(--card-bg) 94%, transparent);
                width: 100%;
                max-width: 500px;
                max-height: 90vh;
                overflow-y: auto;
                position: relative;
                z-index: 1;
                border-radius: 24px;
                box-shadow: 0 35px 85px -40px color-mix(in oklch, var(--fg) 32%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 60%, transparent);
                transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.3s ease;
        }

        .modal-header {
                padding: clamp(1.35rem, 4vw, 1.75rem) clamp(1.35rem, 4vw, 1.75rem) clamp(1.1rem, 3.2vw, 1.35rem);
                border-bottom: 1px solid color-mix(in oklch, var(--card-border) 65%, transparent);
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                gap: 1rem;
                transition: border-color 0.3s ease;
        }

        .header-copy {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
        }

        .modal-badge {
                align-self: flex-start;
                padding: 0.35rem 0.7rem;
                border-radius: 999px;
                font-size: 0.75rem;
                letter-spacing: 0.08em;
                font-weight: 600;
                text-transform: uppercase;
                background: color-mix(in oklch, var(--card-bg) 75%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                color: color-mix(in oklch, var(--fg) 80%, var(--muted) 20%);
        }

        .modal-header h2 {
                font-size: clamp(1.35rem, 3vw, 1.5rem);
                font-weight: 650;
                margin: 0;
                color: var(--fg);
                transition: color 0.3s ease;
        }

        .modal-description {
                font-size: clamp(0.9rem, 2.3vw, 1rem);
                color: color-mix(in oklch, var(--muted) 65%, var(--fg) 35%);
                margin: 0;
                line-height: 1.6;
                transition: color 0.3s ease;
        }

        .close-btn {
                background: color-mix(in oklch, var(--card-bg) 70%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 65%, transparent);
                font-size: 1.25rem;
                line-height: 1;
                cursor: pointer;
                color: color-mix(in oklch, var(--muted) 75%, var(--fg) 25%);
                padding: 0;
                width: 36px;
                height: 36px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 12px;
                transition: all 0.2s ease;
                flex-shrink: 0;
        }

        .close-btn:hover {
                background: color-mix(in oklch, var(--row-hover) 65%, var(--card-bg) 35%);
                color: var(--fg);
                transform: translateY(-1px);
        }

        .form {
                padding: clamp(1.35rem, 4vw, 1.75rem);
                background: color-mix(in oklch, var(--card-bg) 96%, transparent);
                transition: background-color 0.3s ease;
                display: grid;
                gap: 1.2rem;
        }

        .field {
                display: flex;
                flex-direction: column;
                gap: 0.45rem;
        }

        .field label {
                display: block;
                font-size: 0.85rem;
                font-weight: 500;
                color: var(--fg);
                transition: color 0.3s ease;
        }

        .field input {
                width: 100%;
                padding: 0.75rem 0.9rem;
                border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                border-radius: 12px;
                font-size: 0.95rem;
                font-family: inherit;
                transition: border-color 0.15s, background-color 0.3s ease, color 0.3s ease;
                box-sizing: border-box;
                background: color-mix(in oklch, var(--input-bg) 85%, transparent);
                color: var(--fg);
        }

        .field input:focus {
                outline: none;
                border-color: color-mix(in oklch, var(--primary) 70%, var(--fg) 30%);
                box-shadow: 0 0 0 3px color-mix(in oklch, var(--primary) 18%, transparent);
        }

        .field input::placeholder {
                color: var(--muted);
                opacity: 0.7;
        }

        .field-banner {
                margin-top: 0.25rem;
                padding: 0.8rem 1rem;
                border-radius: 14px;
                border: 1px solid color-mix(in oklch, var(--primary) 35%, transparent);
                background: color-mix(in oklch, var(--primary) 18%, transparent);
                color: color-mix(in oklch, var(--fg) 90%, var(--muted) 10%);
                font-size: 0.85rem;
                line-height: 1.4;
        }

	.field-banner strong {
		display: inline-block;
		margin-right: 0.25rem;
	}

        .help-text {
                margin-top: 0.25rem;
                font-size: 0.8rem;
                color: color-mix(in oklch, var(--muted) 75%, var(--fg) 25%);
                line-height: 1.4;
        }

        .message {
                padding: 0.85rem 1rem;
                border-radius: 12px;
                margin-top: 0.5rem;
                font-size: 0.875rem;
                transition: color 0.3s ease;
        }

        .message.success {
                background: color-mix(in oklch, var(--card-bg) 85%, oklch(0.7 0.18 143));
                color: color-mix(in oklch, var(--fg) 85%, oklch(0.58 0.18 143));
                border: 1px solid color-mix(in oklch, var(--primary) 20%, oklch(0.7 0.18 143));
        }

        .message.error {
                background: color-mix(in oklch, var(--card-bg) 85%, oklch(0.65 0.25 30));
                color: color-mix(in oklch, var(--fg) 85%, oklch(0.55 0.25 30));
                border: 1px solid color-mix(in oklch, var(--primary) 18%, oklch(0.65 0.25 30));
        }

        .form-actions {
                display: flex;
                gap: 0.75rem;
                justify-content: flex-end;
                margin-top: 0.5rem;
                flex-wrap: wrap;
        }

        .btn-secondary {
                background: color-mix(in oklch, var(--card-bg) 82%, transparent);
                color: color-mix(in oklch, var(--fg) 85%, var(--muted) 15%);
                border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                padding: 0.7rem 1.1rem;
                font-size: 0.9rem;
                cursor: pointer;
                font-family: inherit;
                transition: transform 0.15s ease, box-shadow 0.3s ease;
                border-radius: 999px;
        }

        .btn-secondary:hover {
                transform: translateY(-1px);
                box-shadow: 0 12px 26px -18px color-mix(in oklch, var(--fg) 25%, transparent);
        }

        .btn-primary {
                background: linear-gradient(135deg, color-mix(in oklch, var(--primary) 75%, var(--fg) 25%), color-mix(in oklch, var(--primary) 55%, var(--card-bg) 45%));
                color: var(--btn-text);
                border: 0;
                padding: 0.75rem 1.3rem;
                font-size: 0.95rem;
                cursor: pointer;
                font-family: inherit;
                transition: transform 0.15s ease, box-shadow 0.3s ease;
                border-radius: 999px;
                box-shadow: 0 18px 36px -22px color-mix(in oklch, var(--primary) 75%, transparent);
        }

        .btn-primary:hover {
                transform: translateY(-1px);
                box-shadow: 0 22px 40px -20px color-mix(in oklch, var(--primary) 80%, transparent);
        }

        .btn-primary:disabled {
                opacity: 0.5;
                cursor: not-allowed;
        }

        @media (max-width: 768px) {
                .modal-content {
                        max-width: 100%;
                        border-radius: 20px;
                }

                .modal-header,
                .form {
                        padding: 1.1rem 1.25rem;
                }

                .form-actions {
                        justify-content: flex-start;
                }
        }
</style>

