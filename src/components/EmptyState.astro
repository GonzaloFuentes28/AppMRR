---
/**
 * EmptyState Component
 * 
 * Displays a friendly empty state when no apps are in the leaderboard yet.
 * Includes a call-to-action button to open the Add App modal.
 * 
 * Used in: index.astro
 */
---

<div class="empty-state">
        <div class="empty-card">
                <h3>No apps yet.</h3>
                <p>Be the first to showcase your product's growth trajectory on the leaderboard.</p>
                <button class="add-btn" id="open-modal-empty">Add yours</button>
        </div>
</div>

<style>
        .empty-state {
                display: flex;
                justify-content: center;
                text-align: center;
                padding: 3.5rem 2rem;
                color: var(--muted);
                transition: color 0.3s ease;
        }

        .empty-card {
                max-width: 460px;
                padding: 2.5rem 2rem;
                display: flex;
                flex-direction: column;
                gap: 1rem;
                background: color-mix(in srgb, var(--card-bg) 92%, rgba(255, 255, 255, 0.35));
                border: 1px solid color-mix(in srgb, var(--card-border) 70%, transparent);
                border-radius: 24px;
                box-shadow: var(--shadow-soft);
                backdrop-filter: blur(8px);
        }

        .empty-card h3 {
                margin: 0;
                font-size: 1.4rem;
                color: var(--fg);
        }

        .empty-card p {
                margin: 0;
                color: var(--muted);
                line-height: 1.6;
        }

        .add-btn {
                align-self: center;
                background-image: var(--accent-gradient);
                color: var(--btn-text);
                border: none;
                padding: 0.85rem 1.75rem;
                font-size: 0.95rem;
                font-weight: 600;
                cursor: pointer;
                transition: transform 0.2s ease, filter 0.3s ease;
                font-family: inherit;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
                border-radius: 999px;
                box-shadow: var(--accent-shadow);
        }

        .add-btn:hover {
                transform: translateY(-2px);
                filter: brightness(1.05);
        }

        @media (max-width: 600px) {
                .empty-card {
                        padding: 2rem 1.5rem;
                }
        }
</style>

