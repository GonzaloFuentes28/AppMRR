---
/**
 * Header Component
 * 
 * Displays the main header of the AppMRR leaderboard including:
 * - Brand logo and title
 * - Subtitle with description
 * - Theme toggle button (light/dark mode)
 * 
 * Used in: index.astro
 */
import { Sun, Moon } from '@lucide/astro';
---

<div class="header-section">
        <div class="header-card">
                <div class="title-wrap">
                        <img src="/appmrr.png" alt="AppMRR" class="brand-icon" />
                        <div class="title-text">
                                <p class="eyebrow">Live SaaS leaderboard</p>
                                <h1>AppMRR</h1>
                        </div>
                </div>
                <p class="subtitle">Discover the fastest-growing iOS apps by MRR and 28-day revenue, refreshed daily and optimised for mobile.</p>
                <div class="meta-row">
                        <span class="meta-chip">âš¡ Updated every 24h</span>
                        <span class="meta-chip">ðŸ“ˆ Growth-focused metrics</span>
                        <span class="meta-chip">ðŸŒ— Light & dark friendly</span>
                </div>
        </div>
        <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
                <Sun class="theme-icon sun" />
                <Moon class="theme-icon moon" />
        </button>
</div>

<style>
        .header-section {
                display: flex;
                justify-content: space-between;
                align-items: stretch;
                gap: clamp(1rem, 3vw, 1.5rem);
        }

        .header-card {
                background: color-mix(in oklch, var(--card-bg) 88%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 60%, transparent);
                padding: clamp(1.25rem, 4vw, 1.75rem);
                border-radius: 18px;
                display: flex;
                flex-direction: column;
                gap: clamp(1rem, 2.5vw, 1.25rem);
                box-shadow: 0 18px 45px -28px color-mix(in oklch, var(--fg) 28%, transparent);
                backdrop-filter: blur(10px);
        }

        .title-wrap {
                display: flex;
                align-items: center;
                gap: clamp(0.75rem, 2vw, 1rem);
        }

        .title-text {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
        }

        .brand-icon {
                width: clamp(52px, 8vw, 64px);
                height: clamp(52px, 8vw, 64px);
                border-radius: 16px;
                object-fit: cover;
                box-shadow: 0 10px 30px -20px color-mix(in oklch, var(--fg) 35%, transparent);
        }

        .eyebrow {
                margin: 0;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.08em;
                font-weight: 600;
                color: color-mix(in oklch, var(--muted) 80%, var(--fg) 20%);
        }

        h1 {
                font-size: clamp(2rem, 5vw, 2.75rem);
                font-weight: 700;
                margin: 0 0 0.5rem;
                color: var(--fg);
                line-height: 1.05;
                background: linear-gradient(120deg, var(--fg), color-mix(in oklch, var(--primary) 80%, var(--fg) 20%));
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
                transition: color 0.3s ease;
        }

        .subtitle {
                color: color-mix(in oklch, var(--muted) 60%, var(--fg) 40%);
                margin: 0;
                font-size: clamp(0.95rem, 2.5vw, 1.05rem);
                font-weight: 450;
                line-height: 1.6;
                transition: color 0.3s ease;
        }

        .meta-row {
                display: flex;
                flex-wrap: wrap;
                gap: 0.6rem;
        }

        .meta-chip {
                display: inline-flex;
                align-items: center;
                gap: 0.35rem;
                padding: 0.4rem 0.75rem;
                border-radius: 999px;
                font-size: 0.8rem;
                font-weight: 500;
                color: color-mix(in oklch, var(--fg) 80%, var(--muted) 20%);
                background: color-mix(in oklch, var(--card-bg) 75%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 70%, transparent);
                box-shadow: inset 0 1px 0 color-mix(in oklch, var(--fg) 10%, transparent);
        }

        .theme-toggle {
                background: color-mix(in oklch, var(--card-bg) 86%, transparent);
                border: 1px solid color-mix(in oklch, var(--card-border) 60%, transparent);
                padding: clamp(0.45rem, 2vw, 0.6rem);
                cursor: pointer;
                border-radius: 14px;
                display: flex;
                align-items: center;
                justify-content: center;
                width: clamp(42px, 8vw, 46px);
                height: clamp(42px, 8vw, 46px);
                color: var(--fg);
                flex-shrink: 0;
                transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
                box-shadow: 0 12px 24px -18px color-mix(in oklch, var(--fg) 35%, transparent);
        }

        .theme-toggle:hover {
                background: color-mix(in oklch, var(--card-bg) 70%, var(--row-hover) 30%);
        }

        .theme-icon {
                width: 20px;
                height: 20px;
		color: var(--fg);
		transition: color 0.3s ease;
	}

	.theme-icon.moon {
		display: none;
	}

	:global([data-theme="dark"]) .theme-icon.sun {
		display: none;
	}

	:global([data-theme="dark"]) .theme-icon.moon {
		display: block;
	}

        @media (max-width: 768px) {
                .header-section {
                        flex-direction: column;
                }

                .header-card {
                        padding: 1.25rem;
                        border-radius: 16px;
                }

                .meta-row {
                        gap: 0.45rem;
                }

                .theme-toggle {
                        align-self: flex-end;
                        position: sticky;
                        top: 1rem;
                }
        }
</style>

